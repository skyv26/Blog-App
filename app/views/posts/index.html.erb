<%= stylesheet_link_tag "posts_controller" %>
<div class="post-container">
  <%= render :partial => 'shared/user-card', :locals => {user: @user} %>
  <% @user.recent_posts.each_with_index do |post, index| %>
    <%= link_to post_id_path(@user.id,post.id) do %>
      <%= render 'shared/post-card', post: post, index: post.id, brief: true, comment: true, all: false %>
    <% end %>
  <% end %>
</div>
